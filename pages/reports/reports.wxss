/* pages/reports/reports.wxss */
.page-title {
  font-size: 36rpx;
  font-weight: 600;
  margin: 32rpx 0;
  text-align: center;
}

.report-tabs {
  display: flex;
  margin-bottom: 32rpx;
  background-color: var(--card-background);
  border-radius: 16rpx;
  overflow: hidden;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  font-size: 28rpx;
  color: var(--secondary-text);
  position: relative;
}

.tab.active {
  color: var(--primary-color);
  font-weight: 500;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background-color: var(--primary-color);
  border-radius: 2rpx;
}

.date-selector {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 32rpx;
}

.date-range {
  font-size: 28rpx;
  font-weight: 500;
  margin: 0 24rpx;
}

.date-arrow {
  padding: 8rpx;
  color: var(--secondary-text);
}

.chart-container {
  width: 100%;
  height: 400rpx;
  margin-bottom: 32rpx;
}

.stats-grid {
  display: flex;
  justify-content: space-around;
  margin-bottom: 16rpx;
}

.stat-item {
  text-align: center;
}

.stat-value {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--primary-color);
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: var(--secondary-text);
}

.stool-summary {
  margin-top: 32rpx;
}

.summary-item {
  display: flex;
  justify-content: space-between;
  padding: 16rpx 0;
  border-bottom: 1px solid #eee;
}

.summary-item:last-child {
  border-bottom: none;
}

.summary-label {
  font-size: 28rpx;
}

.summary-value {
  font-size: 28rpx;
  font-weight: 500;
}

.medication-list {
  margin-top: 16rpx;
}

.medication-item {
  display: flex;
  justify-content: space-between;
  padding: 16rpx 0;
  border-bottom: 1px solid #eee;
}

.medication-item:last-child {
  border-bottom: none;
}

.medication-name {
  font-size: 28rpx;
}

.medication-count {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--primary-color);
}

.empty-data {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 64rpx 0;
}

.empty-icon {
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

.report-actions {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  margin: 48rpx 0;
}

.btn-secondary {
  background-color: #f5f5f5;
  color: var(--secondary-text);
}

.health-overview {
  margin-top: 16rpx;
}

.overview-item {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1px solid #eee;
}

.overview-item:last-child {
  border-bottom: none;
}

.overview-icon {
  margin-right: 24rpx;
}

.overview-content {
  flex: 1;
}

.overview-title {
  font-size: 28rpx;
  margin-bottom: 4rpx;
}

.overview-value {
  font-size: 24rpx;
  color: var(--primary-color);
  font-weight: 500;
} 