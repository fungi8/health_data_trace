/* pages/blood-pressure/blood-pressure.wxss */
.page-title {
  font-size: 36rpx;
  font-weight: 600;
  margin: 32rpx 0;
  text-align: center;
}

.form-textarea {
  width: 100%;
  height: 160rpx;
  padding: 24rpx;
  border: 1px solid #ddd;
  border-radius: 16rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.reference-table {
  border: 1px solid #eee;
  border-radius: 16rpx;
  overflow: hidden;
  margin-bottom: 24rpx;
}

.reference-row {
  display: flex;
  border-bottom: 1px solid #eee;
}

.reference-row:last-child {
  border-bottom: none;
}

.reference-row.header {
  background-color: #f5f5f5;
  font-weight: 600;
}

.reference-cell {
  flex: 1;
  padding: 16rpx;
  text-align: center;
  font-size: 24rpx;
}

.reference-note {
  font-size: 24rpx;
  color: var(--secondary-text);
  text-align: center;
  margin-top: 16rpx;
}

.tips-card {
  background-color: var(--card-background);
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  margin-bottom: 32rpx;
}

.tips-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 24rpx;
}

.tip-item {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.tip-icon {
  margin-right: 16rpx;
}

.tip-text {
  font-size: 28rpx;
  color: var(--text-color);
} 